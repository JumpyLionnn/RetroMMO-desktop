{
  "name": "retrommo-desktop",
  "version": "1.0.0",
  "description": "a RetroMMO desktop client",
  "author": "JumpyLionnn",
  "main": "dist/index.js",
  "scripts": {
    "start": "electron-forge start",
    "watch": "webpack --watch --mode=development",
    "build": "webpack --mode=development",
    "build-release": "webpack --mode=production",
    "watch-old": "webpack --watch --mode=development --env version=old",
    "build-old": "webpack --mode=development --env version=old",
    "build-old-release": "webpack --mode=production --env version=old",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JumpyLionnn/RetroMMO-desktop.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JumpyLionnn/RetroMMO-desktop/issues"
  },
  "homepage": "https://github.com/JumpyLionnn/RetroMMO-desktop#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@electron-forge/publisher-github": "^6.0.0-beta.64",
    "@types/bad-words": "^3.0.1",
    "@types/electron": "^1.6.10",
    "@types/node": "^18.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "electron": "19.0.8",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "bad-words": "^3.0.4",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/images/icon.ico",
        "dir": "dist/",
        "asar": true,
        "name": "RetroMMODesktop",
        "executableName": "retrommo-desktop"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "JumpyLionnn",
              "name": "RetroMMO-desktop"
            }
          },
          "draft": true
        }
      ]
    }
  }
}
